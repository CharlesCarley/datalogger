<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/set_list_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window1"
    android:gravity="center_vertical"
    android:padding="@dimen/P2"
    android:translationY="@dimen/P2">

    <ImageButton
        android:id="@+id/set_list_image"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="true"
        android:contentDescription="@string/act_add_new_name"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:padding="@dimen/P1"
        android:src="@drawable/ic_circle"
        tools:src="@drawable/ic_circle" />

    <TextView
        android:id="@+id/set_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/P2"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:text="@string/act_add_new_name"
        android:textAppearance="@style/BaseTheme.textDefault" />

</LinearLayout>